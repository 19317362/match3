@startuml

package "match3" {

class game {
  play()
}

class board {
  is_match(position): bool
  match(position)
  scroll(position)
}

class iview {
  show_grid(x, y, color)
  get_position(x, y) : int
  update()
}


class player {
  () : transition_table
  process_event(event)
}

class switcher {
  () : transition_table
  process_event(event)
}

game .. player
player .. switcher
player .. iview
player .. board
switcher .. iview
switcher .. board
iview <|.right. sdl_view

}

@enduml
